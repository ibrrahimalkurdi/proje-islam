<body>

    <div class="container">
        <header>
            <h1>ئەدمین پانێل</h1>
            <p>ل ڤێرێ دشێی خالێن پێدڤی بۆ ڤەکرنا هەر ئاستەکێ دیار بکەی</p>
        </header>

        <main id="levels-container">
            <p id="loading-message">داتایێن ئاستان ژ Firebase دهێنە وەرگرتن...</p>
            <!-- ئاست دێ ل ڤێرێ هێنە نیشاندان -->
        </main>
    </div>

    <!-- Firebase SDKs -->
    <script src="https://www.gstatic.com/firebasejs/9.1.0/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.1.0/firebase-firestore-compat.js"></script>

    <script>
    // ==========================================================
    // =========== JAVASCRIPT FOR ADMIN PANEL ===================
    // ==========================================================
    (function() {
        'use strict';

        // ١. کرارا Firebase (هەمان کرارا مالپەرێ سەرەکیە)
        const firebaseConfig = {
            apiKey: "AIzaSyDDi3HtFigGy3qFpFVhSATal3yzm7Z_dZA",
            authDomain: "projeislam.firebaseapp.com",
            projectId: "projeislam",
            storageBucket: "projeislam.appspot.com",
            messagingSenderId: "686343038831",
            appId: "1:686343038831:web:8b5e19daa95176000b6a9a",
            measurementId: "G-1M6PGZBM29"
        };

        // دەستپێکرنا Firebase
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();

        // ٢. وەرگرتنا داتایان و نیشاندان
        document.addEventListener('DOMContentLoaded', () => {
            loadLevels();
        });

        async function loadLevels() {
            const container = document.getElementById('levels-container');
            const loadingMessage = document.getElementById('loading-message');

            try {
                // وەرگرتنا داتایان ژ کۆلێکشنا 'levels' و رێکخستنا وان لسەر بنەمایێ 'level'
                const snapshot = await db.collection('levels').orderBy('level').get();

                if (snapshot.empty) {
                    loadingMessage.textContent = 'چ ئاستەک د داتابەیسێ دا نەهاتە دیتن.';
                    return;
                }

                // ڤالاکرنا کونتەینەری
                container.innerHTML = '';
                
                snapshot.docs.forEach(doc => {
                    const levelData = doc.data();
                    const levelId = doc.id; // ID یا دۆکیومێنتێ

                    // دروستکرنا کاردێ بۆ هەر ئاستەکی
                    const card = document.createElement('div');
                    card.className = 'level-card';
                    
                    // خالێن نوکە، ئەگەر نەبن دێ 0 بیت
                    const currentPoints = levelData.requiredPoints || 0;

                    card.innerHTML = `
                        <div class="level-info">
                            <span class="level-number">${levelData.level}</span>
                            <span class="level-name">${levelData.levelName}</span>
                        </div>
                        <div class="level-controls">
                            <label for="points-${levelId}">خالێن پێدڤی:</label>
                            <input type="number" min="0" id="points-${levelId}" class="points-input" value="${currentPoints}">
                            <button class="save-btn" data-id="${levelId}">پاشکەفتن</button>
                        </div>
                    `;
                    
                    container.appendChild(card);
                });

                // زیادەکرنا Event Listener بۆ هەمی دوگمەیێن پاشکەفتنێ
                document.querySelectorAll('.save-btn').forEach(button => {
                    button.addEventListener('click', () => {
                        const levelDocId = button.getAttribute('data-id');
                        updateLevelPoints(levelDocId, button);
                    });
                });

            } catch (error) {
                console.error("چەوتی د وەرگرتنا داتایان دا: ", error);
                loadingMessage.textContent = 'چەوتیەک روویدا د وەرگرتنا داتایان دا. هیڤیدارین کنسۆلێ ببینە.';
            }
        }

        // ٣. نووکرنا (Update) خالان د Firestore دا
        async function updateLevelPoints(docId, button) {
            const inputElement = document.getElementById(`points-${docId}`);
            // وەرگرتنا بهایێ ژ ئینپوتی و گوهارتنا وێ بۆ ژمارە
            const newPoints = parseInt(inputElement.value, 10);

            if (isNaN(newPoints) || newPoints < 0) {
                alert("هیڤیدارین ژمارەیەکا دروست و مەزنتر ژ سفرێ بنڤیسە.");
                return;
            }

            // گوهارتنا نڤیسینا دوگمەیێ
            button.textContent = '...چاوەڕوانبە';
            button.disabled = true;

            try {
                // نووکرنا فیلدێ 'requiredPoints' بتنێ
                await db.collection('levels').doc(docId).update({
                    requiredPoints: newPoints
                });
                
                // سەرکەفتی
                button.textContent = 'پاشکەفت بوو!';
                button.classList.add('saved');

                // پشتی ٢ چرکەیان، دوگمە دزڤریتەڤە حالەتێ خۆ یێ ئاسایی
                setTimeout(() => {
                    button.textContent = 'پاشکەفتن';
                    button.classList.remove('saved');
                    button.disabled = false;
                }, 2000);

            } catch (error) {
                console.error("چەوتی د نووکرنا خالان دا: ", error);
                alert("چەوتیەک د پاشکەفتنێ دا روویدا!");
                button.textContent = 'پاشکەفتن';
                button.disabled = false;
            }
        }

    })();
    </script>

</body>
</html>
